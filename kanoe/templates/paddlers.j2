{% extends "base.j2" %}

{% block title %}Paddlers{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Paddlers</h1>

<div class="row">
  <div class="col-sm-6">
    <table id="paddlers" class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Division</th>
        </tr>
      </thead>
      <tbody>
        {% for paddler in paddlers %}
        <tr>
          <td>
            <a href="{{ url_for('kanoe.paddler', paddler_id=paddler.id) }}">{{ paddler.name }}</a>
          </td>
          <td>{% if paddler.division %}{{ paddler.division }}{% endif %}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <div class="col-sm-6">
    <a href="{{ url_for('kanoe.paddler') }}" class="btn btn-primary">Add a Paddler</a>
  </div>
</div>

{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
  $(document).ready(function () {
    $('#paddlers').DataTable({
      paging: true,
      searching: true,
      ordering: true,
      info: true
    });
  });
</script>
{% endblock %}