{% extends "base.j2" %}

{% block title %}Paddlers{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Paddlers</h1>

<div class="row">
  <div class="col-sm-6">
    <table id="paddlers" class="table table-striped">
        <thead>
          <tr>
              <th>Name</th>
              <th>Division</th>
          </tr>
        </thead>
        <tbody>
        {% for paddler in paddlers %}
          <tr>
              <td>
                  <a href="{{ url_for('paddler', paddler_id=paddler.id) }}">{{ paddler.name }}</a>
              </td>
              <td>{{ paddler.division }}</td>
          </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
  <div class="col-sm-6">
    <h2>Add a Paddler</h2>
    <form method="post">
      <div class="row">
        <div class="form-group col-sm-12">
          <label for="first">First Name</label>
          <input type="text"
                class="form-control"
                id="first"
                name="first"
                placeholder="Name"
                value="{{ request.form['first'] }}">
        </div>
        <div class="form-group col-sm-12">
          <label for="middle">Middle Name(s)</label>
          <input type="text"
                class="form-control"
                id="middle"
                name="middle"
                placeholder="Name"
                value="{{ request.form['middle'] }}">
        </div>
        <div class="form-group col-sm-12">
          <label for="last">Last Name</label>
          <input type="text"
                class="form-control"
                id="last"
                name="last"
                placeholder="Name"
                value="{{ request.form['last'] }}">
        </div>
        <div class="form-group col-sm-12">
          <label for="division">Division</label>
          <input type="number" id="division" name="division" min="1" max="9" value="{{ request.form['division'] }}">
        </div>
        <hr class="my-4">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
$(document).ready(function () {
	$('#paddlers').DataTable({
    paging: true,
    searching: true,
    ordering: true,
    info: true
});
});
</script>
{% endblock %}