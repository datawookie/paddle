{% extends "base.j2" %}

{% block title %}Races{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Races</h1>

<table id="races" class="table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
{% for race in races %}
        <tr>
            <td><a href="{{ url_for('race', race_id=race.id) }}">{{ race.name }}</a></td>
            <td>{{ race.date }}</td>
        </tr>
{% endfor %}
    </tbody>
</table>

{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
$(document).ready(function () {
	$('#races').DataTable();
});
</script>
{% endblock %}