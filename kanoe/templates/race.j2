{% extends "base.j2" %}

{% block title %}Entries{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Entries</h1>

<div class="d-grid gap-2">
    <a href="{{ url_for('kanoe.race_results_bulk', race_id=race_id) }}" class="btn btn-primary" role="button">Capture Results (Bulk)</a>
    <a href="{{ url_for('kanoe.race_results_quick', race_id=race_id) }}" class="btn btn-primary" role="button">Capture Results (Quick)</a>
    <a href="{{ url_for('kanoe.race_results_display', race_id=race_id) }}" class="btn btn-primary" role="button" target="_blank">Display Results</a>
    <a href="{{ url_for('kanoe.race_allocate_numbers', race_id=race_id) }}" class="btn btn-primary" role="button" target="_blank">Allocate Race Numbers</a>
</div>

<div class="row">
    <div class="col-sm-12">
        <table id="entries" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Entry #</th>
                    <th>Paddlers</th>
                    <th>Category</th>
                    <th>Division</th>
                    <th>Team</th>
                    <th>Race #</th>
                </tr>
            </thead>
            <tbody>
        {% for entry in entries %}
                <tr>
                    <td>{{ entry.entry_number }}</td>
                    <td><a href="{{ url_for('kanoe.entry', entry_id=entry.id) }}">{{ entry }}</a></td>
                    <td>{{ entry.category }}</td>
                    <td>{{ entry.division }}</td>
                    <td>{{ entry.team or "" }}</td>
                    <td>{{ entry.race_number or "" }}</td>
                </tr>
        {% endfor %}
            </tbody>
            <!--
            <tfoot>
                <tr>
                    <th>Entry #</th>
                    <th>Paddlers</th>
                    <th>Category</th>
                    <th>Division</th>
                    <th>Team</th>
                    <th>Race #</th>
                </tr>
            </tfoot>
            -->
        </table>
    </div>
</div>

{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
$(document).ready(function () {
	var table = $('#entries').DataTable();
});
</script>
{% endblock %}