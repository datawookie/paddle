<!doctype html>
<html lang="en">
    <head>
        {% block head %}
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        {% include 'common/load-css.j2' %}
        {% block styles %}
        {% endblock %}

        <title>{% block title %}{% endblock %}</title>
        {% endblock %}
    </head>
    <body>
        <header>
            {% include 'common/navbar.j2' %}
        </header>
        <main>
            <div class="container">
            {% for category, message in get_flashed_messages(with_categories=true) %}
                <div class="alert alert-{{ category }}" role="alert">{{ message }}</div>
            {% endfor %}
            {% block content %}
            {% endblock %}
            </div>
        </main>
        <footer>
            {% include 'common/footer.j2' %}
        </footer>

        {% include 'common/load-js.j2' %}
        {% block scripts %}
        {% endblock %}
    </body>
</html>
