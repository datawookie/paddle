{% extends "base.j2" %}

{% block title %}Entry Edit Seat{% endblock %}

{% block content %}
<h1>Entry Edit Seat</h1>

<div class="row">
  <div class="col-sm-6">
    <form method="post">
  <div class="mb-3">
    <label for="paddler">Paddler</label>
    <select class="form-select" class="form-control" id="paddler" name="paddler">
    {% for paddler in paddlers %}
      <option value="{{ paddler.id }}"{% if seat.paddler == paddler %} selected{% endif %}>{{ paddler }}</option>
    {% endfor %}
    </select>
  </div>
  <div class="mb-3">
    <label for="club">Club</label>
    <select class="form-select" class="form-control" id="club" name="club">
      <option value="0">No Club</option>
    {% for club in clubs %}
      <option value="{{ club.id }}"{% if seat.club == club %} selected{% endif %}>{{ club }}</option>
    {% endfor %}
    </select>
  </div>
  <div class="mb-3">
    <label for="team">Team</label>
    <select class="form-select" class="form-control" id="team" name="team">
      <option></option>
    {% for team in teams %}
      <option value="{{ team.id }}"{% if seat.team == team %} selected{% endif %}>{{ team }}</option>
    {% endfor %}
    </select>
  </div>
  <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="1" id="services" name="services">
      <label class="form-check-label" for="retired">Services</label>
  </div>
  <hr class="my-4">
  <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>

{% endblock %}