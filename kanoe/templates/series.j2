{% extends "base-fluid.j2" %}
{% from "macros.j2" import race_card %}

{% block title %}Series{% endblock %}

{% block styles %}
{% endblock %}

{% block content %}
<h1>Series</h1>

<ul>
    {% for race in series.races %}
    <li>{{ race }} {{ race.past }}</li>
    {% endfor %}
</ul>

{% for category, sets in categories.items() %}
<h2>{{ category }}</h2>
<div class="row">
    <div class="col-md-4">
        <table id="teams" class="table table-sm table-striped">
            <thead></thead>
            <tbody>
                {% for set in sets %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ set.name }}</td>
                    <td style="width: 20%; text-align: right;">{{ set.time }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endfor %}
{% endblock %}

{% block sidebar %}
{% include 'sidebar-series.j2' %}
{% endblock %}
