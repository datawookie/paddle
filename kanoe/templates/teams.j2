{% extends "base.j2" %}

{% block title %}Teams{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Teams</h1>

<div class="row">
  <div class="col-sm-6">
    <table id="teams" class="table table-striped">
        <thead>
          <tr>
              <th>Name</th>
          </tr>
        </thead>
        <tbody>
        {% for team in teams %}
          <tr>
              <td>
                  <a href="">{{ team.name }}</a>
              </td>
          </tr>
        {% endfor %}
        </tbody>
    </table>
  </div>
  <div class="col-sm-6">
    <h2>Add a Team</h2>
    <form method="post">
      <div class="row">
        <div class="form-group col-sm-12">
          <label for="title">Name</label>
          <input type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Name"
                value="{{ request.form['name'] }}">
        </div>
        <hr class="my-4">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>

{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
$(document).ready(function () {
	$('#teams').DataTable({
    paging: true,
    searching: true,
    ordering: true,
    info: true
});
});
</script>
{% endblock %}