{% extends "base.j2" %}

{% block title %}Add a Race{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Add a Race</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group col-sm-12">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Name"
            value="{{ request.form['name'] }}">
    </div>
    <div class="form-group col-sm-12">
        <label for="date">Date</label>
        <input id="date" name="date" class="form-control" type="date" value="{{ request.form['date'] }}">
    </div>
    <div class="form-group col-sm-12">
        <label>Series</label>
        <select class="form-select form-select" name="series">
            {% for series in serieses %}
            <option value="{{ series.id }}">{{ series.name }}</option>
            {% endfor %}
        </select>
    </div>
    <hr class="my-4">
    <button type="submit" class="btn btn-primary">Create Race</button>
    </div>
</form>

{% endblock %}