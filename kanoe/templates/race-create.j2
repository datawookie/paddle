{% extends "base.j2" %}
{% import "common/selector.j2" as selector %}

{% block title %}Add a Race{% endblock %}

{% block content %}

<h1>Add a Race</h1>

<form method="post">
    <div class="row">
        <div class="form-group col-sm-12">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                value="{{ request.form['name'] }}">
        </div>
        <div class="form-group col-sm-12">
            <label for="date">Date</label>
            <input id="date" name="date" class="form-control" type="date" value="{{ request.form['date'] }}">
        </div>
        <div class="form-group col-sm-12">
            {{ selector.series(serieses) }}
        </div>
        <hr class="my-4">
        <button type="submit" class="btn btn-primary">Add Race</button>
    </div>
</form>

{% endblock %}