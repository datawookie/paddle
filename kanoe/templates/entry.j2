{% extends "base.j2" %}

{% block title %}Entry{% endblock %}

{% block styles %}
{% include 'common/datatables-css.j2' %}
{% endblock %}

{% block content %}

<h1>Entry</h1>

<div class="row">
  <div class="col">
    <table>
      <tr>
        <th>Division:</th>
        <td>{{ entry.division }}</td>
      </tr>
      <tr>
        <th>Category:</th>
        <td></td>
      </tr>
    </table>
    <table id="paddlers" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Paddler</th>
                <th>Club</th>
                <th>Division</th>
            </tr>
        </thead>
        <tbody>
            {% for seat in entry.seats %}
            <tr>
              <td><a href="{{ url_for('paddler', paddler_id=seat.paddler.id) }}">{{ seat.paddler.name }}</a></td>
              <td><a href="{{ url_for('club', club_id=seat.club.id) }}">{{ seat.club.id }}</a></td>
              <td>{{ seat.paddler.division }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
  </div>
  <div class="col">
    <form method="post">
      <div class="form-group">
        <label for="start">Start</label>
        <input type="time" class="form-control" id="start" step="30">
      </div>
      <div class="form-group">
        <label for="start">Finish</label>
        <input type="time" class="form-control" id="finish" step="1">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
{% endblock %}

{% block scripts %}
{% include 'common/jquery-javascript.j2' %}
{% include 'common/datatables-javascript.j2' %}
<script type="text/javascript" class="init">
$(document).ready(function () {
	$('#paddlers').DataTable({
    paging: false,
    searching: false,
    ordering: false,
    info: false
});
});
</script>
{% endblock %}