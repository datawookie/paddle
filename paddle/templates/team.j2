{% extends "base-fluid.j2" %}
{% from "macros.j2" import find_value %}

{% block title %}Team{% endblock %}

{% block content %}

<h1>Team</h1>

Name: {{ team.name }}<br>
Type: {{ team.type }}<br>
Series: {{ team.series }}

{% for race, data in races.items() %}
<h2 class="mt-4">{{ race }}</h2>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-sm">
      <tbody>
        <tr>
          <th style="width: 40%;">Crew</th>
          <th style="width: 30%;">Race</th>
          <th style="width: 20%;">Category</th>
          <th>Time</th>
        </tr>
        {% for entry in data["entries"] %}
        <tr>
          <td><a href="{{ url_for('kanoe.entry', entry_id=entry.id) }}">{{ entry }}</a></td>
          <td><a href="{{ url_for('kanoe.race', race_id=entry.race_id) }}">{{ entry.race.name }}</a></td>
          <td>{{ entry.category }}</td>
          <td>{{ entry.time }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% if data["time"] %}
Time: {{ data["time"] }}
{% endif %}
{% endfor %}

{% endblock %}

{% block sidebar %}
{% include 'sidebar-team.j2' %}
{% endblock %}
